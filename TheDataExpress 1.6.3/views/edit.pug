extends layout

block content
    form(id='form', method='post', action='/edit/' + user.name)
      label(for='name') Name:
      input(type='text', name='name' value=user.name)
      br
      label(for='password') Password:
      input(type="text", name='password')
      br
      label(for='email') E-Mail:
      input(type="text", name='email' value=user.email)
      br
      label(for='age') Age:
      input(type="text", name='age' value=user.age)
      br
      label(for='questionOne') What is your mothers maiden name?:
      input(type='text', name='questionOne' value=user.questionOne)
      br
      label(for='questionTwo') What city were you born in?:
      input(type='text', name='questionTwo' value=user.questionTwo)
      br
      label(for='questionThree') What was your first pet's name?:
      input(type='text', name='questionThree' value=user.questionThree)
      br
      input(type='submit', value='Update User')