extends layout

block content
    img(src=avatarUrl)
    form(id='form', method='post', action='/create')
        label(for='name') Name:
        input(type='text', name='name')
        br
        label(for='password') Password:
        input(type="text", name='password')
        br
        label(for='email') E-Mail:
        input(type="text", name='email')
        br
        label(for='age') Age:
        input(type="text", name='age')
        br
        label(for='question1') Question 1: How many licks does it take to get to the center of a tootsie pop?
        select(name='question1')
            option(value='1') 1
            option(value='11') 11
            option(value='364') 364
            option(value='Other') Other
        br    
        label(for='question2') Question 2: Are Video Games good?
        select(name='question2')
            option(value='Yes') Yes
            option(value='No') No
            option(value='Maybe') Maybe
            option(value='Other') Other
        br    
        label(for='question3') Question 3: Are you ready to have an account to this website?
        select(name='question3')
            option(value='Yes') Yes
            option(value='No') No
            option(value='Maybe') Maybe
            option(value='Others') Other
        br
        input(type='submit', value='Add New User')